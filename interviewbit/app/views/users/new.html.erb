<div class="justify-content-center ml-auto mr-auto container">
<h3><%= link_to 'All Users', users_path , class: 'btn btn-success'%></h3>
<h1>New User Creation Page</h1>
<h4>
	<% if @u.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@u.errors.count, "error") %> prohibited
        this user from being saved:
      </h2>
      <h3>
      <ul>
        <% @u.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
  </h3>
    </div>
  <% end %>

	<%= form_with scope: :user , url: users_path, local: true do |f| %>
		<div>
			<%= f.label :name %>
			<%= f.text_field :name, class: 'form-control' %>
		</div>
		<div>
			<%= f.label :email %>
			<%= f.email_field :email,  class: 'form-control' %>
		</div>
		<div>
			<%= f.label :resume %><br>
		 	<%= f.file_field  :resume ,class: 'form-control' %>
		</div>
		<%= f.submit %>
	<%end%>
</h4>
</div>