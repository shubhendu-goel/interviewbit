<div class="container ml-auto mr-auto">

	<div class="justify-content-center">
		<h3><%= link_to 'Home', interviews_path , class: 'btn btn-success'%></h3>
		<h1>View User</h1>
		<h4>

			<div class="row">
		    	<%= @u.name %>	
		    	<br>	
		    	<%= @u.email %> 
		    	<br>
		    	<% if @u.resume.attached? %>
	    			<%= link_to 'Resume' ,  url_for(@u.resume) %> 
	    		<%end%>	    			
		    </div>
		</h4>
	    <br>
	    	<h4>
	    		<%= link_to 'Edit', edit_user_url(@u) , class: 'btn btn-warning' %>
	    		<%= link_to 'Delete', user_path(@u), method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger' %>
	    	</h4>
	    	<br>
	    	<h3>Interviews for <%= @u.name%> </h3>
	    	<table class="table table-stripped">
	    		<thead>
	    			<td>Sr No.</td>
	    			<td>Interview</td>
	    		</thead>	
	    		<tbody>
	    			<% cnt=1 %>
	    			<% @u.interviews.each do |i| %>
	    				<tr>
	    					<td><%= cnt %><% cnt=cnt+1 %></td>
	    					<td><%= link_to i.title, '/interviews/'+String(i.id)  %></td>
	    				</tr>
	    			<% end %>
	    		</tbody>
	    	</table>
	</div>
</div>